<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/Theme.AppLib.ActionBar.Solid</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.AppLib.ActionBar.Solid" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/Theme.AppLib.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.AppLib.ActionBar.TitleTextStyle" parent="">
        <item name="android:textSize">@dimen/action_bar_text_size</item>
        <item name="fontFamily">@font/font_bold</item>
    </style>

    <style name="CustomButton.Filled" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/custom_button_background</item>
    </style>

    <style name="CustomButtonNotFilled" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">@dimen/padding_eight_dp</item>
        <item name="fontFamily">@font/font_bold</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/custom_dialog_background</item>
    </style>
    
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="checkedIconTint">@color/color_white</item>
        <item name="chipIconSize">@dimen/button_radius</item>
        <item name="android:textAppearance">@style/CustomTextSize</item>
    </style>

    <style name="CustomTextSize">
        <item name="android:textSize">@dimen/chip_text_size</item>
    </style>
    
    <style name="CustomFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="elevation">@dimen/default_elevation</item>
        <item name="tint">@color/color_white</item>
        <item name="rippleColor">@color/color_custom_button_pressed</item>
    </style>

</resources>
